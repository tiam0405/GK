<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gk_bk.mapper.UserMapper">
  <resultMap id="UserMap" type="com.gk_bk.domain.User">
    <id property="id" column="id" />
    <result property="username" column="username" />
    <result property="passwordHash" column="password_hash" />
    <result property="displayName" column="display_name" />
    <result property="createdAt" column="created_at" />
    <result property="updatedAt" column="updated_at" />
  </resultMap>

  <insert id="insert" parameterType="com.gk_bk.domain.User" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO users (username, password_hash, display_name, created_at, updated_at)
    VALUES (#{username}, #{passwordHash}, #{displayName}, NOW(), NOW())
  </insert>

  <select id="findById" parameterType="long" resultMap="UserMap">
    SELECT * FROM users WHERE id = #{id}
  </select>

  <select id="findByUsername" parameterType="string" resultMap="UserMap">
    SELECT * FROM users WHERE username = #{username}
  </select>
</mapper>

